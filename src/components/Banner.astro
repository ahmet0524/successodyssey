---
import { Image } from 'astro:assets';
import bannerImg from "../assets/banner.webp";
---

<section class="banner">
  <div class="banner-overlay"></div>
  <Image
    src={bannerImg}
    alt="Success Odyssey Hub - Personal Development and Productivity"
    widths={[346, 720, 1080]}
    sizes="(max-width: 600px) 346px, (max-width: 1024px) 720px, 1080px"
    format="webp"
    quality={80}
    fetchpriority="high"
    decoding="async"
    loading="eager"
  />
</section>

<style lang="scss">
.banner {
  position: relative;
  margin-bottom: 4rem;
  overflow: hidden;
  border-radius: var(--radius);
  box-shadow: var(--shadow-lg);

  img {
    width: 100%;
    height: clamp(150px, 20vw, 180px); // Daha küçük height
    object-fit: cover;
    transition: transform 0.6s ease;
    display: block;
  }

  // Dark overlay - yazıların okunabilir olması için
  &-overlay {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(102, 126, 234, 0.3) 0%,
      rgba(118, 75, 162, 0.3) 50%,
      rgba(245, 158, 11, 0.2) 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  &::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.15); // Hafif dark overlay ekstra
    pointer-events: none;
    z-index: 0;
  }

  &:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    img {
      height: 120px; // Mobile'da daha da küçük
    }
  }
}
</style>