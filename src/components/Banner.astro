---
import { Image } from 'astro:assets';
import bannerImg from "../assets/banner.webp";
---

<section class="banner">
  <Image
    src={bannerImg}
    alt="Success Odyssey Hub - Personal Development and Productivity"
    widths={[346, 720, 1080]}
    sizes="(max-width: 600px) 346px, (max-width: 1024px) 720px, 1080px"
    format="webp"
    quality={80}
    fetchpriority="high"
    loading="eager"
  />
</section>

<style lang="scss">
.banner {
  position: relative;
  margin-bottom: 4rem;
  overflow: hidden;
  border-radius: var(--radius);
  box-shadow: var(--shadow-lg);

  img {
    width: 100%;
    height: clamp(200px, 30vw, 300px);
    object-fit: cover;
    transition: transform 0.6s ease;
    display: block;
  }

  &::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.1) 0%, rgba(245, 158, 11, 0.1) 100%);
    pointer-events: none;
  }

  &:hover img {
    transform: scale(1.05);
  }
}
</style>