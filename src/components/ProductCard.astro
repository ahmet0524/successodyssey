---
const { title, description, price, originalPrice, image, link, badge } = Astro.props;
---

<article class="product-card">
  {badge && <div class="product-badge">{badge}</div>}
  <img src={image.src || image} alt={title} loading="lazy" width="346" height="240" />
  <div class="product-card-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="pricing">
      {originalPrice && <span class="original-price">${originalPrice}</span>}
      <span class="current-price">${price}</span>
    </div>
    <a href={link} target="_blank" rel="noopener noreferrer" class="buy-button">
      Get Now â†’
    </a>
  </div>
</article>

<style lang="scss">
.product-card {
  background: var(--color-bg-primary);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  overflow: hidden;
  transition: var(--transition);
  border: 1px solid var(--color-border);
  position: relative;

  &:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
  }

  .product-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 10;
  }

  img {
    width: 100%;
    height: 240px;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  &:hover img {
    transform: scale(1.05);
  }

  &-content {
    padding: 1.5rem;

    h3 {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      color: var(--color-text-primary);
    }

    p {
      color: var(--color-text-tertiary);
      margin-bottom: 1rem;
      line-height: 1.6;
      font-size: 0.95rem;
    }

    .pricing {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 1.5rem;

      .original-price {
        color: var(--color-text-tertiary);
        text-decoration: line-through;
        font-size: 0.9rem;
      }

      .current-price {
        color: var(--color-primary);
        font-size: 1.25rem;
        font-weight: 700;
      }
    }

    .buy-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      font-weight: 600;
      color: white;
      padding: 0.875rem 1.75rem;
      background: var(--gradient-primary);
      border-radius: var(--radius);
      transition: var(--transition);
      width: 100%;
      justify-content: center;
      text-align: center;

      &:hover {
        background: linear-gradient(135deg, var(--color-primary-dark), var(--color-primary));
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
        color: white;
      }
    }
  }
}

@media (max-width: 768px) {
  .product-card {
    &-content {
      .pricing {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.25rem;
      }
    }
  }
}
</style>