---
// pages/blog.astro
import Layout from "../layouts/Layout.astro";
import rethinkingSuccessImage from "../assets/rethinking-success.webp";
import engineOfSuccessImage from "../assets/engine-of-success.webp";
import artOfExecutionImage from "../assets/art-of-execution.webp";
import overcomingResistanceImage from "../assets/overcoming-resistance.webp";
import productivityToolsImage from "../assets/productivity-tools.webp";
import mentalModelsImage from "../assets/mental-models.webp";
import stoicWisdomImage from "../assets/stoic-wisdom.webp";
import philosophyOfSuccess from "../assets/philosophy-of-success.webp";
import aiMagnifiedMentalModels2 from "../assets/ai-magnified-mental-models-2.webp";
import happinessPhilosophyImage from "../assets/happiness-hero.webp";

import card1 from "../assets/card1.jpg";
import card2 from "../assets/card2.jpg";
import card3 from "../assets/card3.jpg";

// Blog data with all articles
const allBlogPosts = [
  {
    title: "The Philosophy of Happiness and Success",
    summary: "Discover Earl Nightingale's timeless wisdom on finding true happiness through purposeful work, service to others, and living in the present moment.",
    image: happinessPhilosophyImage,
    link: "/blog/happiness-philosophy",
    category: "Philosophy",
    readTime: "15 min read",
    publishedDate: "2025-01-28"
  },
  {
    title: "Rethinking Success: A Scientific and Philosophical Exploration",
    summary: "Challenge conventional definitions of success through neuroscience, positive psychology, and philosophical frameworks. Discover evidence-based approaches to meaningful achievement.",
    image: rethinkingSuccessImage,
    link: "/blog/rethinking-success",
    category: "Philosophy",
    readTime: "9 min read",
    publishedDate: "2025-01-25"
  },
  {
    title: "Habits, Discipline, and Momentum: The Engine of Sustainable Success",
    summary: "Uncover the science behind habit formation and learn how to build disciplined systems that create unstoppable momentum toward your goals.",
    image: engineOfSuccessImage,
    link: "/blog/habits-discipline-momentum",
    category: "Habits",
    readTime: "8 min read",
    publishedDate: "2025-01-22"
  },
  {
    title: "From Vision to Reality: The Art and Science of Execution",
    summary: "Bridge the gap between dreams and reality with proven execution frameworks. Learn how successful people turn visions into tangible results.",
    image: artOfExecutionImage,
    link: "/blog/vision-to-reality",
    category: "Execution",
    readTime: "10 min read",
    publishedDate: "2025-01-20"
  },
  {
    title: "Overcoming Resistance: Building Resilience in the Face of Failure",
    summary: "Transform setbacks into stepping stones. Discover psychological strategies and practical tools for building unshakeable resilience.",
    image: overcomingResistanceImage,
    link: "/blog/overcoming-resistance",
    category: "Resilience",
    readTime: "7 min read",
    publishedDate: "2025-01-18"
  },
  {
    title: "15 Best Productivity Tools for 2025 (Tested by Experts)",
    summary: "Discover the most effective productivity tools for 2025. From Notion templates to time tracking apps, find the perfect tools to boost your efficiency.",
    image: productivityToolsImage,
    link: "/blog/best-productivity-tools-2025",
    category: "Productivity",
    readTime: "12 min read",
    publishedDate: "2025-01-20"
  },
  {
    title: "Mental Models for Better Decision Making",
    summary: "Discover powerful thinking frameworks that help you navigate complex problems and make smarter choices in life and business.",
    image: mentalModelsImage,
    link: "/blog/mental-models",
    category: "Mental Models",
    readTime: "8 min read",
    publishedDate: "2025-01-15"
  },
  {
    title: "Stoic Wisdom for Modern Life",
    summary: "Apply ancient Stoic teachings to build resilience, find inner peace, and maintain clarity in our fast-paced modern world.",
    image: stoicWisdomImage,
    link: "/blog/stoicism",
    category: "Philosophy",
    readTime: "6 min read",
    publishedDate: "2025-01-12"
  },
  {
    title: "The Philosophy of Success",
    summary: "Learn timeless principles and daily habits that successful people use to achieve their goals and maintain long-term fulfillment.",
    image: philosophyOfSuccess,
    link: "/blog/success-philosophy",
    category: "Success",
    readTime: "7 min read",
    publishedDate: "2025-01-10"
  },
  {
    title: "AI-Amplified Mental Models: The Thinking Revolution That's Changing Everything",
    summary: "This article reveals how combining Charlie Munger's mental models with AI can compress decades of cognitive development into months, giving you unprecedented decision-making speed and accuracy through systematic thinking frameworks.",
    image: aiMagnifiedMentalModels2,
    link: "/blog/ai-amplified-mental-models",
    category: "Success",
    readTime: "8 min read",
    publishedDate: "2025-09-24"
  }
];

// Get unique categories
const categories = ['All', ...new Set(allBlogPosts.map(post => post.category))];
---

<Layout
  title="Blog - Personal Development and Success Strategies | Success Odyssey"
  description="Explore our comprehensive collection of articles on personal development, success philosophy, mental models, stoicism, and productivity. Evidence-based strategies for transformation."
  keywords="personal development blog, success strategies, mental models, stoicism, productivity, philosophy, habits, resilience, execution"
>
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container">
      <h1>Insights for Your Success Journey</h1>
      <p>Evidence-based strategies, timeless wisdom, and practical tools for personal transformation and sustainable success.</p>

      <!-- Category Filter -->
      <div class="category-filter">
        {categories.map((category) => (
          <button class="filter-btn active" data-category={category}>
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Article Section -->
  <section class="featured-article">
    <div class="container">
      <div class="section-header">
        <h2>Featured Article</h2>
        <p>Our latest deep-dive into success and personal development</p>
      </div>

      <article class="featured-card">
        <div class="featured-image">
          <img src={allBlogPosts[0].image.src || allBlogPosts[0].image} alt={allBlogPosts[0].title} />
          <div class="featured-badge">Latest</div>
        </div>
        <div class="featured-content">
          <div class="featured-meta">
            <span class="category-tag">{allBlogPosts[0].category}</span>
            <time datetime={allBlogPosts[0].publishedDate}>{new Date(allBlogPosts[0].publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
            <span class="read-time">{allBlogPosts[0].readTime}</span>
          </div>
          <h3>{allBlogPosts[0].title}</h3>
          <p>{allBlogPosts[0].summary}</p>
          <a href={allBlogPosts[0].link} class="read-more-btn">
            Read Full Article
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      </article>
    </div>
  </section>

  <!-- All Articles Section -->
  <section class="all-articles">
    <div class="container">
      <div class="section-header">
        <h2>All Articles</h2>
        <p>Explore our complete collection of insights and strategies</p>
      </div>

      <div class="blog-grid" id="blogGrid">
        {allBlogPosts.slice(1).map((post) => (
          <article class="horizontal-blog-card" data-category={post.category}>
            <div class="card-image">
              <img src={post.image.src || post.image} alt={post.title} />
            </div>
            <div class="card-content">
              <div class="card-meta">
                <span class="category-tag">{post.category}</span>
                <time datetime={post.publishedDate}>{new Date(post.publishedDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
                <span class="read-time">{post.readTime}</span>
              </div>
              <h3>{post.title}</h3>
              <p>{post.summary}</p>
              <a href={post.link} class="card-link">
                Read More
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7 17L17 7M17 7H7M17 7V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="newsletter-section">
    <div class="container">
      <div class="newsletter-content">
        <h2>Never Miss an Insight</h2>
        <p>Get our latest articles on success, philosophy, and personal development delivered to your inbox.</p>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email address" required />
          <button type="submit">Subscribe</button>
        </form>
        <p class="newsletter-disclaimer">Join 5,000+ readers. No spam, unsubscribe anytime.</p>
      </div>
    </div>
  </section>
</Layout>

<style lang="scss">
// Hero Section
.blog-hero {
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
  padding: 4rem 0 2rem;
  text-align: center;

  h1 {
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .category-filter {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;

    .filter-btn {
      padding: 0.5rem 1rem;
      border: 1px solid var(--border-color);
      background: var(--bg-primary);
      color: var(--text-secondary);
      border-radius: 2rem;
      cursor: pointer;
      transition: var(--transition);
      font-weight: 500;

      &:hover,
      &.active {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
      }
    }
  }
}

// Featured Article
.featured-article {
  padding: 4rem 0;

  .section-header {
    text-align: center;
    margin-bottom: 3rem;

    h2 {
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    p {
      color: var(--text-light);
    }
  }

  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    background: var(--bg-primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 1px solid var(--border-color);

    .featured-image {
      position: relative;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
      }

      .featured-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: var(--accent-color);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 600;
      }

      &:hover img {
        transform: scale(1.05);
      }
    }

    .featured-content {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;

      .featured-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: var(--text-light);
        flex-wrap: wrap;

        .category-tag {
          background: var(--bg-tertiary);
          color: var(--primary-color);
          padding: 0.25rem 0.75rem;
          border-radius: 1rem;
          font-weight: 600;
        }
      }

      h3 {
        font-size: 1.75rem;
        color: var(--text-primary);
        margin-bottom: 1rem;
        line-height: 1.3;
      }

      p {
        color: var(--text-secondary);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }

      .read-more-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--primary-color);
        color: white;
        padding: 0.875rem 1.5rem;
        border-radius: var(--radius);
        font-weight: 600;
        transition: var(--transition);

        &:hover {
          background: var(--primary-dark);
          transform: translateY(-2px);
          box-shadow: var(--shadow-lg);
        }
      }
    }
  }
}

// All Articles Section
.all-articles {
  padding: 4rem 0;
  background: var(--bg-secondary);

  .section-header {
    text-align: center;
    margin-bottom: 3rem;

    h2 {
      color: var(--text-primary);
      margin-bottom: 0.5rem;
    }

    p {
      color: var(--text-light);
    }
  }

  .blog-grid {
    display: grid;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  // Horizontal Blog Card
  .horizontal-blog-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    background: var(--bg-primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    border: 1px solid var(--border-color);
    transition: var(--transition);

    &:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    .card-image {
      overflow: hidden;

      img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        transition: transform 0.6s ease;
      }
    }

    &:hover .card-image img {
      transform: scale(1.1);
    }

    .card-content {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;

      .card-meta {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.85rem;
        color: var(--text-light);

        .category-tag {
          background: var(--bg-tertiary);
          color: var(--primary-color);
          padding: 0.2rem 0.6rem;
          border-radius: 1rem;
          font-weight: 600;
          font-size: 0.75rem;
        }
      }

      h3 {
        font-size: 1.25rem;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
        line-height: 1.3;
      }

      p {
        color: var(--text-secondary);
        line-height: 1.5;
        margin-bottom: 1rem;
        flex-grow: 1;
      }

      .card-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--primary-color);
        font-weight: 600;
        transition: var(--transition);
        align-self: flex-start;

        &:hover {
          color: var(--primary-dark);
          transform: translateX(4px);
        }
      }
    }
  }
}

// Newsletter Section
.newsletter-section {
  padding: 4rem 0;
  background: var(--primary-color);
  color: white;
  text-align: center;

  h2 {
    color: white;
    margin-bottom: 1rem;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto 1rem;

    input {
      flex: 1;
      padding: 1rem;
      border: none;
      border-radius: var(--radius);
      font-size: 1rem;

      &:focus {
        outline: 2px solid var(--accent-color);
        outline-offset: 2px;
      }
    }

    button {
      padding: 1rem 2rem;
      background: var(--accent-color);
      color: white;
      border: none;
      border-radius: var(--radius);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);

      &:hover {
        background: #d97706;
        transform: translateY(-2px);
      }
    }
  }

  .newsletter-disclaimer {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }
}

// Responsive Design
@media (max-width: 768px) {
  .blog-hero {
    padding: 2rem 0;

    .category-filter {
      gap: 0.25rem;

      .filter-btn {
        padding: 0.4rem 0.8rem;
        font-size: 0.9rem;
      }
    }
  }

  .featured-article .featured-card {
    grid-template-columns: 1fr;
    gap: 0;

    .featured-content {
      padding: 1.5rem;
    }
  }

  .horizontal-blog-card {
    grid-template-columns: 1fr;
    gap: 0;

    .card-image img {
      height: 200px;
    }

    .card-content {
      padding: 1rem;
    }
  }

  .newsletter-section .newsletter-form {
    flex-direction: column;

    button {
      padding: 1rem;
    }
  }
}
</style>

<script>
// Category filtering functionality
document.addEventListener('DOMContentLoaded', function() {
  const filterButtons = document.querySelectorAll('.filter-btn');
  const blogCards = document.querySelectorAll('.horizontal-blog-card');

  filterButtons.forEach(button => {
    button.addEventListener('click', function() {
      const category = this.getAttribute('data-category');

      // Update active button
      filterButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');

      // Filter articles
      blogCards.forEach(card => {
        if (category === 'All' || card.getAttribute('data-category') === category) {
          card.style.display = 'grid';
          card.style.animation = 'fadeIn 0.5s ease-in';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });

  // Newsletter form handling
  const newsletterForm = document.querySelector('.newsletter-form');
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = this.querySelector('input[type="email"]').value;
      // Add your newsletter subscription logic here
      alert('Thank you for subscribing! We\'ll send you our latest insights.');
      this.reset();
    });
  }
});
</script>