    publishedDate: "2025-01-18"
  },
  {
    title: "15 Best Productivity Tools for 2025 (Tested by Experts)",
    summary: "Discover the most effective productivity tools for 2025. From Notion templates to time tracking apps.",
    image: productivityToolsImage.src,
    link: "/blog/best-productivity-tools-2025",
    category: "Productivity",
    readTime: "12 min read",
    publishedDate: "2025-01-20"
  },
  {
    title: "Mental Models for Better Decision Making",
    summary: "Discover powerful thinking frameworks that help you navigate complex problems and make smarter choices.",
    image: mentalModelsImage.src,
    link: "/blog/mental-models",
    category: "Mental Models",
    readTime: "8 min read",
    publishedDate: "2025-01-15"
  },
  {
    title: "Stoic Wisdom for Modern Life",
    summary: "Apply ancient Stoic teachings to build resilience, find inner peace, and maintain clarity.",
    image: stoicWisdomImage.src,
    link: "/blog/stoicism",
    category: "Philosophy",
    readTime: "6 min read",
    publishedDate: "2025-01-12"
  },
  {
    title: "The Philosophy of Success",
    summary: "Learn timeless principles and daily habits that successful people use to achieve their goals.",
    image: philosophyOfSuccess.src,
    link: "/blog/success-philosophy",
    category: "Success",
    readTime: "7 min read",
    publishedDate: "2025-01-10"
  },
  {
    title: "AI-Amplified Mental Models: The Thinking Revolution",
    summary: "Combining Charlie Munger's mental models with AI to compress decades of cognitive development into months.",
    image: aiMagnifiedMentalModels2.src,
    link: "/blog/ai-amplified-mental-models",
    category: "AI & Technology",
    readTime: "8 min read",
    publishedDate: "2025-01-15"
  }
];

const url = new URL(Astro.request.url);
const searchQuery = url.searchParams.get('search')?.toLowerCase().trim() || '';
const categories = ['All', ...new Set(allBlogPosts.map(post => post.category))];
---

<Layout
  title="Blog - Personal Development and Success Strategies | Success Odyssey Hub"
  description="Explore our comprehensive collection of articles on personal development, success philosophy, mental models, stoicism, and productivity."
  keywords="personal development blog, success strategies, mental models, stoicism, productivity, philosophy, habits, resilience"
  canonicalUrl="https://successodysseyhub.com/blog"
>
  <!-- Hero Section -->
  <section class="blog-hero">
    <div class="container">
      <h1>Insights for Your Success Journey</h1>
      <p>Evidence-based strategies, timeless wisdom, and practical tools for personal transformation.</p>

      <!-- Search Bar -->
      <div class="search-container">
        <form action="/blog" method="get" class="search-form">
          <input
            type="search"
            name="search"
            placeholder="Search articles..."
            value={searchQuery}
            class="search-input"
            aria-label="Search blog articles"
          />
          <button type="submit" class="search-btn" aria-label="Search">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </form>
        {searchQuery && (
          <div class="search-results-info">
            <p>Search results for: <strong>"{searchQuery}"</strong></p>
            <a href="/blog" class="clear-search">Clear search</a>
          </div>
        )}
      </div>

      <!-- Category Filter -->
      <div class="category-filter">
        {categories.map((category) => (
          <button class="filter-btn" data-category={category}>
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Article -->
  {!searchQuery && (
    <section class="featured-article">
      <div class="container">
        <div class="section-header">
          <h2>Featured Article</h2>
          <p>Our latest deep-dive into success and personal development</p>
        </div>

        <article class="featured-card">
          <div class="featured-image">
            <img src={allBlogPosts[0].image} alt={allBlogPosts[0].title} loading="eager" />
            <div class="featured-badge">Latest</div>
          </div>
          <div class="featured-content">
            <div class="featured-meta">
              <span class="category-tag">{allBlogPosts[0].category}</span>
              <time datetime={allBlogPosts[0].publishedDate}>{new Date(allBlogPosts[0].publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              <span class="read-time">{allBlogPosts[0].readTime}</span>
            </div>
            <h3>{allBlogPosts[0].title}</h3>
            <p>{allBlogPosts[0].summary}</p>
            <a href={allBlogPosts[0].link} class="read-more-btn">
              Read Full Article →
            </a>
          </div>
        </article>
      </div>
    </section>
  )}

  <!-- All Articles Section -->
  <section class="all-articles">
    <div class="container">
      <div class="section-header">
        <h2>{searchQuery ? 'Search Results' : 'All Articles'}</h2>
        <p>{searchQuery ? `Found ${allBlogPosts.filter(post =>
          post.title.toLowerCase().includes(searchQuery) ||
          post.summary.toLowerCase().includes(searchQuery) ||
          post.category.toLowerCase().includes(searchQuery)
        ).length} article(s)` : 'Explore our complete collection of insights'}</p>
      </div>

      <div class="blog-grid" id="blogGrid">
        {allBlogPosts.slice(searchQuery ? 0 : 1).map((post) => {
          const matchesSearch = !searchQuery ||
            post.title.toLowerCase().includes(searchQuery) ||
            post.summary.toLowerCase().includes(searchQuery) ||
            post.category.toLowerCase().includes(searchQuery);

          return matchesSearch ? (
            <article class="horizontal-blog-card" data-category={post.category}>
              <div class="card-image">
                <img src={post.image} alt={post.title} loading="lazy" />
              </div>
              <div class="card-content">
                <div class="card-meta">
                  <span class="category-tag">{post.category}</span>
                  <time datetime={post.publishedDate}>{new Date(post.publishedDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</time>
                  <span class="read-time">{post.readTime}</span>
                </div>
                <h3>{post.title}</h3>
                <p>{post.summary}</p>
                <a href={post.link} class="card-link">
                  Read More →
                </a>
              </div>
            </article>
          ) : null;
        })}
      </div>

      {searchQuery && allBlogPosts.filter(post =>
        post.title.toLowerCase().includes(searchQuery) ||
        post.summary.toLowerCase().includes(searchQuery) ||
        post.category.toLowerCase().includes(searchQuery)
      ).length === 0 && (
        <div class="no-results">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none">
            <path d="M21 21L15 15M17 10C17 13.866 13.866 17 10 17C6.13401 17 3 13.866 3 10C3 6.13401 6.13401 3 10 3C13.866 3 17 6.13401 17 10Z" stroke="currentColor" stroke-width="2"/>
          </svg>
          <h3>No articles found</h3>
          <p>Try adjusting your search terms or browse all articles</p>
          <a href="/blog" class="btn-primary">View All Articles</a>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="newsletter-section">
    <div class="container">
      <div class="newsletter-content">
        <h2>Never Miss an Insight</h2>
        <p>Get our latest articles delivered to your inbox.</p>
        <form class="newsletter-form">
          <input type="email" placeholder="Enter your email address" required aria-label="Email address" />
          <button type="submit">Subscribe</button>
        </form>
        <p class="newsletter-disclaimer">Join 5,000+ readers. No spam, unsubscribe anytime.</p>
      </div>
    </div>
  </section>
</Layout>

<style lang="scss">
.search-container {
  max-width: 600px;
  margin: 2rem auto 1.5rem;

  .search-form {
    position: relative;
    display: flex;
    gap: 0.5rem;

    .search-input {
      flex: 1;
      padding: 1rem 1.5rem;
      border: 2px solid var(--color-border);
      border-radius: 2rem;
      font-size: 1rem;
      transition: var(--transition);
      background: var(--color-bg-primary);
      color: var(--color-text-primary);

      &:focus {
        outline: none;
        border-color: var(--color-primary);
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
      }

      &::placeholder {
        color: var(--color-text-tertiary);
      }
    }

    .search-btn {
      padding: 0 1.5rem;
      background: var(--color-primary);
      color: white;
      border: none;
      border-radius: 2rem;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;

      &:hover {
        background: var(--color-primary-dark);
        transform: translateY(-2px);
      }
    }
  }

  .search-results-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
    padding: 0.75rem 1rem;
    background: var(--color-bg-tertiary);
    border-radius: var(--radius);

    p {
      margin: 0;
      color: var(--color-text-secondary);
      font-size: 0.95rem;

      strong {
        color: var(--color-primary);
      }
    }

    .clear-search {
      color: var(--color-primary);
      font-weight: 600;
      font-size: 0.9rem;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}

.no-results {
  text-align: center;
  padding: 4rem 2rem;

  svg {
    color: var(--color-text-tertiary);
    margin-bottom: 1.5rem;
  }

  h3 {
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  p {
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  .btn-primary {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: var(--color-primary);
    color: white;
    border-radius: var(--radius);
    font-weight: 600;
    transition: var(--transition);

    &:hover {
      background: var(--color-primary-dark);
      transform: translateY(-2px);
    }
  }
}

.blog-hero {
  background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 100%);
  padding: 4rem 0 2rem;
  text-align: center;

  h1 {
    margin-bottom: 1rem;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  p {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .category-filter {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;

    .filter-btn {
      padding: 0.5rem 1rem;
      border: 1px solid var(--color-border);
      background: var(--color-bg-primary);
      color: var(--color-text-secondary);
      border-radius: 2rem;
      cursor: pointer;
      transition: var(--transition);
      font-weight: 500;

      &:hover,
      &.active {
        background: var(--color-primary);
        color: white;
        border-color: var(--color-primary);
      }
    }
  }
}

.featured-article {
  padding: 4rem 0;

  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    background: var(--color-bg-primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 1px solid var(--color-border);

    .featured-image {
      position: relative;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
      }

      .featured-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: var(--color-accent);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 600;
      }

      &:hover img {
        transform: scale(1.05);
      }
    }

    .featured-content {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      justify-content: center;

      .featured-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        color: var(--color-text-tertiary);
        flex-wrap: wrap;

        .category-tag {
          background: var(--color-bg-tertiary);
          color: var(--color-primary);
          padding: 0.25rem 0.75rem;
          border-radius: 1rem;
          font-weight: 600;
        }
      }

      h3 {
        font-size: 1.75rem;
        color: var(--color-text-primary);
        margin-bottom: 1rem;
        line-height: 1.3;
      }

      p {
        color: var(--color-text-secondary);
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
      }

      .read-more-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: var(--color-primary);
        color: white;
        padding: 0.875rem 1.5rem;
        border-radius: var(--radius);
        font-weight: 600;
        transition: var(--transition);

        &:hover {
          background: var(--color-primary-dark);
          transform: translateY(-2px);
          box-shadow: var(--shadow-lg);
        }
      }
    }
  }
}

.all-articles {
  padding: 4rem 0;
  background: var(--color-bg-secondary);

  .blog-grid {
    display: grid;
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .horizontal-blog-card {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 1.5rem;
    background: var(--color-bg-primary);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: var(--transition);

    &:hover {
      transform: translateY(-4px);
      box-shadow: var(--shadow-lg);
    }

    .card-image {
      overflow: hidden;

      img {
        width: 100%;
        height: 150px;
        object-fit: cover;
        transition: transform 0.6s ease;
      }
    }

    &:hover .card-image img {
      transform: scale(1.1);
    }

    .card-content {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;

      .card-meta {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.85rem;
        color: var(--color-text-tertiary);

        .category-tag {
          background: var(--color-bg-tertiary);
          color: var(--color-primary);
          padding: 0.2rem 0.6rem;
          border-radius: 1rem;
          font-weight: 600;
          font-size: 0.75rem;
        }
      }

      h3 {
        font-size: 1.25rem;
        color: var(--color-text-primary);
        margin-bottom: 0.75rem;
        line-height: 1.3;
      }

      p {
        color: var(--color-text-secondary);
        line-height: 1.5;
        margin-bottom: 1rem;
        flex-grow: 1;
      }

      .card-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-primary);
        font-weight: 600;
        transition: var(--transition);

        &:hover {
          color: var(--color-primary-dark);
          transform: translateX(4px);
        }
      }
    }
  }
}

.newsletter-section {
  padding: 4rem 0;
  background: var(--color-primary);
  color: white;
  text-align: center;

  h2 {
    color: white;
    margin-bottom: 1rem;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 400px;
    margin: 0 auto 1rem;

    input {
      flex: 1;
      padding: 1rem;
      border: none;
      border-radius: var(--radius);
      font-size: 1rem;

      &:focus {
        outline: 2px solid var(--color-accent);
        outline-offset: 2px;
      }
    }

    button {
      padding: 1rem 2rem;
      background: var(--color-accent);
      color: white;
      border: none;
      border-radius: var(--radius);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);

      &:hover {
        background: var(--color-accent-dark);
        transform: translateY(-2px);
      }
    }
  }

  .newsletter-disclaimer {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
  }
}

@media (max-width: 768px) {
  .featured-article .featured-card {
    grid-template-columns: 1fr;
  }

  .horizontal-blog-card {
    grid-template-columns: 1fr !important;

    .card-image img {
      height: 200px;
    }
  }

  .newsletter-section .newsletter-form {
    flex-direction: column;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const filterButtons = document.querySelectorAll('.filter-btn');
  const blogCards = document.querySelectorAll('.horizontal-blog-card');

  filterButtons[0]?.classList.add('active');

  filterButtons.forEach(button => {
    button.addEventListener('click', function() {
      const category = this.getAttribute('data-category');

      filterButtons.forEach(btn => btn.classList.remove('active'));
      this.classList.add('active');

      blogCards.forEach(card => {
        if (category === 'All' || card.getAttribute('data-category') === category) {
          card.style.display = 'grid';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });

  const newsletterForm = document.querySelector('.newsletter-form');
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = this.querySelector('input[type="email"]').value;
      alert('Thank you for subscribing!');
      this.reset();
    });
  }
});
</script>