  const observer = new MutationObserver(function(mutations) {
    mutations.forEach(function(mutation) {
      if (mutation.attributeName === 'style') {
        const target = mutation.target;
        if (target.id === 'mce-error-response' || target.id === 'mce-success-response') {
          if (target.style.display !== 'none') {
            target.classList.add('show');
          } else {
            target.classList.remove('show');
          }
        }
      }
    });
  });

  if (errorResponse) {
    observer.observe(errorResponse, { attributes: true, attributeFilter: ['style'] });
  }
  if (successResponse) {
    observer.observe(successResponse, { attributes: true, attributeFilter: ['style'] });
  }

  // Track successful subscriptions with Google Analytics
  form.addEventListener('submit', function() {
    setTimeout(function() {
