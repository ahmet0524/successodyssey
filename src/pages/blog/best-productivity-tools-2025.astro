<style lang="scss">
.breadcrumb {
  margin-bottom: 1rem;
  font-size: 0.9rem;

  ol {
    list-style: none;
    display: flex;
    gap: 0.5rem;

    li {
      &:not(:last-child)::after {
        content: ' / ';
        margin-left: 0.5rem;
        color: var(--text-light);
      }

      a {
        color: var(--primary-color);
        text-decoration: none;

        &:hover {
          text-decoration: underline;
        }
      }

      &:last-child {
        color: var(--text-light);
      }
    }
  }
}

.table-of-contents {
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius);
  padding: 1.5rem;
  margin: 2rem 0;

  h2 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }

  ol {
    line-height: 1.6;

    a {
      color: var(--text-secondary);
      text-decoration: none;

      &:hover {
        color: var(--primary-color);
      }
    }
  }
}

.product-highlight {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border: 1px solid var(--primary-color);
  border-radius: var(--radius);
  padding: 2rem;
  margin: 2rem 0;

  h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }

  ul {
    margin-bottom: 1.5rem;

    li {
      margin-bottom: 0.5rem;
    }
  }

  .affiliate-cta {
    display: inline-block;
    background: var(--primary-color);
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius);
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 0.5rem;

    &:hover {
      background: var(--primary-dark);
    }
  }

  .affiliate-notice {
    display: block;
    color: var(--text-light);
    font-size: 0.8rem;
  }
}

.pros-cons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin: 2rem 0;

  .pros, .cons {
    padding: 1.5rem;
    border-radius: var(--radius);

    h4 {
      margin-bottom: 1rem;
    }
  }

  .pros {
    background: #ecfdf5;
    border: 1px solid #10b981;

    h4 {
      color: #059669;
    }
  }

  .cons {
    background: #fef2f2;
    border: 1px solid #ef4444;

    h4 {
      color: #dc2626;
    }
  }
}

.automation-examples {
  background: var(--bg-tertiary);
  padding: 1.5rem;
  border-radius: var(--radius);
  margin: 1.5rem 0;

  h4 {
    color: var(--primary-color);
    margin-bottom: 1rem;
  }
}

.action-section {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  text-align: center;
  padding: 3rem;
  border-radius: var(--radius);
  margin: 3rem 0;

  h3 {
    color: white;
    margin-bottom: 1rem;
  }

  p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
  }

  .main-cta {
    display: inline-block;
    background: var(--accent-color);
    color: white;
    padding: 1rem 2rem;
    border-radius: var(--radius);
    text-decoration: none;
    font-weight: 600;

    &:hover {
      background: #d97706;
      transform: translateY(-2px);
    }
  }
}

.author-info {
  display: flex;
  gap: 1rem;
  padding: 2rem;
  background: var(--bg-secondary);
  border-radius: var(--radius);
  margin-top: 3rem;

  img {
    width: 60px;
    height: 60px;
    border-radius: 50%;
  }

  h4 {
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  p {
    color: var(--text-light);
    font-size: 0.9rem;
  }
}

.related-articles {
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid var(--border-color);

  h3 {
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;

    a {
      display: block;
      padding: 1rem;
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      text-decoration: none;
      color: var(--text-primary);
      transition: var(--transition);

      &:hover {
        background: var(--bg-tertiary);
        transform: translateY(-2px);
      }
    }
  }