      color: var(--color-text-primary, #1a1a1a);
    }

    /* Author info */
    .author-info {
      display: flex;
      gap: 1rem;
      align-items: center;
      padding: 2rem;
      background: var(--color-accent-light, #f8fafc);
      border-radius: 8px;
      margin-top: 3rem;
    }

    .author-details {
      flex: 1;
    }

    .author-details h4 {
      margin-bottom: 0.5rem;
      color: var(--color-text-primary, #1a1a1a);
      font-size: 1.1rem;
    }

    .author-details p {
      color: var(--color-text-secondary, #666);
      font-size: 0.9rem;
      margin: 0;
      line-height: 1.5;
    }

    /* Related articles */
    .related-articles {
      margin-top: 3rem;
      padding-top: 2rem;
      border-top: 1px solid var(--color-border, #e5e7eb);
    }

    .related-articles h3 {
      margin-bottom: 1.5rem;
      color: var(--color-text-primary, #1a1a1a);
    }

    .related-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .related-grid a {
      display: block;
      padding: 1rem;
      background: var(--color-accent-light, #f8fafc);
      border: 1px solid var(--color-border, #e5e7eb);
      border-radius: 8px;
      text-decoration: none;
      color: var(--color-text-primary, #1a1a1a);
      transition: all 0.3s ease;
    }

    .related-grid a:hover {
      background: var(--color-bg-tertiary, #f3f4f6);
      transform: translateY(-2px);
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 768px) {
      .blog-page {
        padding: 1rem;
      }

      .article-meta {
        flex-direction: column;
        gap: 1rem;
      }

      .content {
        font-size: 1rem;
      }

      .lead {
        font-size: 1.125rem;
      }

      .content h2 {
        font-size: 1.6rem;
      }

      .content h3 {
        font-size: 1.3rem;
      }

      .author-info {
        padding: 1.5rem;
      }

      .related-grid {
        grid-template-columns: 1fr;
      }
    }