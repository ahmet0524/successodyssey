    }

    .theme-toggle:focus {
      outline: 4px solid #60a5fa;
      outline-offset: 4px;
    }

    .theme-toggle svg {
      width: 24px;
      height: 24px;
      color: white;
    }

    .theme-toggle .moon-icon,
    .theme-toggle .hidden {
      display: none;
    }

    html[data-theme="dark"] .theme-toggle {
      background: #2563eb;
    }

