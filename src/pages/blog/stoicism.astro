      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "headline": "Stoic Wisdom for Modern Life",
      "image": `${siteUrl}${marcusAurelius.src}`,
      "datePublished": "${datePublished}",
      "dateModified": "${dateModified}",
      "author": {
        "@type": "Organization",
        "name": "Success Odyssey Hub",
        "url": "${siteUrl}"
