---
import Layout from "../../layouts/Layout.astro";
import JsonLD from "../../components/JsonLD.astro";
import { Image } from 'astro:assets';
import marcusAurelius from "../../assets/marcus-aurelius.webp";

const datePublished = "2025-01-12T00:00:00Z";
const dateModified = "2025-01-12T00:00:00Z";
const author = "Success Odyssey Hub";
const siteUrl = Astro.site?.toString() || "https://successodysseyhub.com";
const canonicalUrl = `${siteUrl}/blog/stoicism`;
---

<Layout
  title="Stoic Wisdom for Modern Life | Success Odyssey Hub"
  description="Learn how ancient Stoic philosophy can help you build resilience, find inner peace, and maintain clarity in our fast-paced modern world."
  keywords="stoicism, philosophy, resilience, inner peace, mental strength, Marcus Aurelius, Seneca, stoic principles, dichotomy of control"
  image={marcusAurelius}
  type="article"
  datePublished={datePublished}
  dateModified={dateModified}
  author={author}
>
  <!-- Preload Critical Assets -->
  <link rel="preload" as="image" href={marcusAurelius.src} slot="head" />

  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} slot="head" />

  <!-- Open Graph -->
  <meta property="og:url" content={canonicalUrl} slot="head" />
  <meta property="og:image" content={`${siteUrl}${marcusAurelius.src}`} slot="head" />
  <meta property="og:image:width" content="900" slot="head" />
  <meta property="og:image:height" content="400" slot="head" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" slot="head" />
  <meta name="twitter:image" content={`${siteUrl}${marcusAurelius.src}`} slot="head" />

  <!-- Schema.org JSON-LD -->
